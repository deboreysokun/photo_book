<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <FrameLayout android:layout_width="match_parent" android:layout_height="600dp"
                 tools:layout_editor_absoluteX="0dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
                 android:id="@+id/frameLayout">
        <ImageView
                android:background="@drawable/pic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/a1"
        />
        <ImageView
                android:background="@drawable/pic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/a2"
        />
        <ImageView
                android:background="@drawable/pic3"
                android:layout_width="match_parent"
                android:layout_height="608dp"
                android:id="@+id/a3"
        />
        <ImageView
                android:background="@drawable/pic4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/a4"
        />
        <ImageView
                android:background="@drawable/pic5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/a5"
        />
    </FrameLayout>
    <Button
            android:text="Prevoius "
            android:width="40dp"
            android:height="20dp"
            android:id="@+id/prevoius"
            android:layout_width="123dp"
            android:layout_height="39dp"
            android:onClick="prev"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp"/>
    <Button
            android:width="40dp"
            android:height="20dp"
            android:text="Next "
            android:id="@+id/next"
            android:layout_width="144dp"
            android:layout_height="38dp"
            android:onClick="next"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>